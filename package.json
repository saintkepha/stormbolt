{
	"name": "stormbolt",
	"description": "stormbolt provides secure messaging overlay networking",
	"version": "0.2.8",
	"author": "Peter K. Lee",
	"description": "Stormbolt is a web framework for cloud based automation connect bolt client.",
	"repository": {
		"type": "git",
		"url": "git://github.com/stormstack/stormbolt.git"
	},
	"dependencies": {
		"stormagent": "0.2.x",
		"request": "2.9.x",
		"json-schema": "0.2.0",	  
		"node-uuid": "1.3.x",	  
		"optimist":"0.6.0",
		"mux-demux":"3.7.8",
		"async":"0.8.0"
	},
	"devDependencies": {
		"coffee-script": ">=1.3"
	},
	"optionalDependencies": {},
	"engines": {
		"node": ">=0.6.x"
	},
	"main": "./lib/bolt",
	"config": {
		"insecure": false,
		"uplinks": [ "127.0.0.1:443" ],
		"uplinkStrategy": "round-robin",
		"allowRelay": false,
		"relayPort":  0,
		"allowedPorts": [ 5000,8000 ],
		"listenPort": 0,
		"beaconInterval": 10,
		"beaconRetry": 3,
		"beaconValidity": 45,
		"cert": "/var/stormstack/agent.cert",
		"key": "/var/stormstack/agent.key",
		"ca": "/var/stormstack/ca.cert",
		"logfile": "/var/log/stormbolt.log",
		"storm": {
			"functions": [
				"agent.connect",
				"agent.listen",
				"agent.proxy",
				"agent.clients",
				"boltstream.relay"
			],
			"plugins": [
				"lib/plugin"
			]
		}
	},
	"scripts": {
		"prepublish": "mkdir -p lib; coffee -o lib -c src",
		"start": "node lib/app"
	},
	"contributors": [
		"Geetha Rani",
		"Murty Mulagala",
		"Sivaprasath Busa",
		"Suresh kumar"
	]
}
