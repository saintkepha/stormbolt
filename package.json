{
	"name": "stormbolt",
	"description": "stormbolt provides secure messaging overlay networking",
	"version": "0.2.2",
	"author": "Peter K. Lee",
	"description": "Stormbolt is a web framework for cloud based automation connect bolt client.",
	"repository": {
		"type": "git",
		"url": "git://github.com/stormstack/stormbolt.git"
	},
	"dependencies": {
		"dirty": "0.9.x",
		"request": "2.9.x",
		"json-schema": "0.2.0",	  
		"node-uuid": "1.3.x",	  
		"optimist":"0.6.0",
		"mux-demux":"3.7.8",
		"async":"0.8.0"
	},
	"devDependencies": {
		"coffee-script": ">=1.3"
	},
	"optionalDependencies": {},
	"engines": {
		"node": ">=0.6.x"
	},
	"main": "./lib/bolt",
	"config": {
		"uplinks": [ ],
		"uplinkStrategy": "round-robin",
		"allowRelay": true,
		"relayPort":  8017,
		"allowedPorts": [ ],
		"listenPort": 443,
		"beaconInterval": 10,
		"beaconRetry": 3,
		"beaconValidity": 45,
		"cert": "/var/stormstack/certs/snap.cert",
		"key": "/var/stormstack/certs/snap.key",
		"ca": "/var/stormstack/certs/ca.cert",
		"logfile": "/var/log/stormbolt.log",
		"datadir": "/var/stormstack",
		"storm": {
			"functions": [
				"bolt.connect",
				"bolt.listen",
				"bolt.relay",
				"bolt.list"
			],
			"plugin": "lib/plugin"
		}
	},
	"scripts": {
		"prepublish": "find src -name '*.coffee' | xargs coffee -o lib -c",
		"start": "node lib/app.js"
	},
	"contributors": [
		"Geetha Rani",
		"Murty Mulagala",
		"Sivaprasath Busa",
		"Suresh kumar"
	]
}
